{
  "expo": {
    "name": "TocToc",
    "slug": "toctoc",
    "version": "1.0.0",
    "scheme": "toctoc",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#C8B191"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#e8c0b3"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.gordojm.toctoc"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ]
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "1d13249d-5ac8-4674-82eb-68f875da816a"
      }
    }
  }
}
